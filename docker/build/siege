FROM centos

RUN yum groupinstall "Development Tools" -y \
    && yum install -y openssl-devel \
    && cd /root \
    && curl http://download.joedog.org/siege/siege-4.0.5.tar.gz --output siege-4.0.5.tar.gz \
    && tar -zxvf siege-4.0.5.tar.gz \
    && cd siege-4.0.5 \
    && ./configure --with-ssl=/usr/bin/openssl \
    && make \
    && make install 

CMD ["bash"]

